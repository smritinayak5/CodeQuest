<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Coding Question"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:textColor="@color/black"
            android:layout_marginTop="50dp"/>

        <!-- Test Number -->
        <EditText
            android:id="@+id/testNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Test Number (e.g., 1)"
            android:textColorHint="@color/gray"
            android:inputType="number"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"/>

        <!-- Question Title -->
        <EditText
            android:id="@+id/titleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Question Title"
            android:textColorHint="@color/gray"
            android:inputType="text"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"/>

        <!-- Question Body -->
        <EditText
            android:id="@+id/questionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Question Description"
            android:textColorHint="@color/gray"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:maxLines="10"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"/>

        <!-- Difficulty Spinner -->
        <Spinner
            android:id="@+id/difficultySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- Programming Languages -->
        <EditText
            android:id="@+id/languageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add Supported Language (e.g., Python)"
            android:textColorHint="@color/gray"
            android:inputType="text"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/addLanguageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Language"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/purple"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/languageListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="16dp" />

        <!-- Test Cases -->
        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Test Case Input"
            android:textColorHint="@color/gray"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/outputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Expected Output"
            android:textColorHint="@color/gray"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/addTestCaseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Test Case"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/purple"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/testCaseListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="16dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/addQuestionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Question"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/purple"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
