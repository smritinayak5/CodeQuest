<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="60dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_back"
            android:padding="4dp"
            android:contentDescription="Back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingStart="10dp"/>
    </LinearLayout>

    <!-- Line Above the Title -->
    <ScrollView
        android:id="@+id/help_scroll_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:scrollbars="none"
        android:background="@color/white"
        android:padding="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. How to Use CodeQuest?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Sign up or log in to start solving coding challenges.\n• Choose a challenge based on difficulty level.\n• Submit your code and get instant feedback."
                android:textSize="18sp"
                android:textColor="@color/gray"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Common Issues and Solutions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Forgot Password? → \n   Use the 'Forgot Password?' option on the login screen.\n• Submission Not Working? → \n   Ensure your code follows the required input format.\n• Leaderboard Not Updating? → \n   Refresh the page or try again later."
                android:textSize="18sp"
                android:textColor="@color/gray"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Contact Us"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• If you have any issues, email us at \n  support@codequest.com \n• Check the FAQs section for more answers."
                android:textSize="18sp"
                android:textColor="@color/gray"
                android:padding="10dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>